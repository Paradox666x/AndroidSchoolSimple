<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tech"
    android:backgroundTint="#A6123AA6"
    android:backgroundTintMode="src_atop"
    tools:context="com.example.myproject.view.MainActivity">


    <Button
        android:id="@+id/registerc"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="#3E3E3E"
        android:text="Cree un compte"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@+id/login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/login"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:backgroundTint="#F5F6F8"
        android:text="Connexion"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/prof"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:backgroundTint="#FF0000"
        android:text="AccÃ¨s professeur uniquement"
        android:textColorHighlight="#FF0A0A"
        android:textColorLink="#C3BCBC"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView2"
        android:name="com.example.myproject.view.loginfrag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerc"
        app:layout_constraintVertical_bias="1.0"
        tools:layout="@layout/fragment_loginfrag" />


</androidx.constraintlayout.widget.ConstraintLayout>